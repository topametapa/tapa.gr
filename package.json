{
  "name": "tapa-gr",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run 11ty:dev\" \"npm run css:dev\"",
    "build": "npm run css:build && npm run 11ty:build",
    "11ty:dev": "eleventy --serve --watch",
    "11ty:build": "eleventy",
    "css:dev": "tailwindcss -i ./src/css/input.css -o ./src/css/styles.css --watch",
    "css:build": "tailwindcss -i ./src/css/input.css -o ./src/css/styles.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "concurrently": "^9.0.0",
    "tailwindcss": "^3.4.0"
  }
}
