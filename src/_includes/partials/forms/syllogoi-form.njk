{# Contextual contact form for Associations/Clubs niche #}
<div class="max-w-lg mx-auto mt-10 bg-white rounded-2xl shadow-xl p-8" id="protasi-form">
  <h3 class="text-xl font-bold text-slate-900 text-center mb-6">
    Ζητήστε πρόταση για ιστοσελίδα Συλλόγου
  </h3>
  <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-5">
    <input type="hidden" name="_subject" value="Νέο αίτημα - Ιστοσελίδα Συλλόγου/Σωματείου">
    <input type="hidden" name="_next" value="https://tapa.gr/euxaristoume-syllogoi/">

    {# Τύπος φορέα #}
    <div>
      <label for="typos-forea" class="block text-sm font-medium text-slate-700 mb-1.5">
        Τύπος φορέα
      </label>
      <select
        id="typos-forea"
        name="typos_forea"
        required
        class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
        <option value="" disabled selected>Επιλέξτε τύπο</option>
        <option value="Αθλητικός Σύλλογος">Αθλητικός Σύλλογος</option>
        <option value="Πολιτιστικός Σύλλογος">Πολιτιστικός Σύλλογος</option>
        <option value="Επαγγελματικό Σωματείο">Επαγγελματικό Σωματείο</option>
        <option value="ΜΚΟ">ΜΚΟ</option>
        <option value="Άλλο">Άλλο</option>
      </select>
    </div>

    {# Περιοχή #}
    <div>
      <label for="periochi-syllogos" class="block text-sm font-medium text-slate-700 mb-1.5">
        Περιοχή
      </label>
      <input
        type="text"
        id="periochi-syllogos"
        name="periochi"
        required
        placeholder="π.χ. Αθήνα, Θεσσαλονίκη, Ηράκλειο"
        class="w-full px-4 py-3 rounded-lg border border-slate-300 text-slate-900 text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
    </div>

    {# Email ή Τηλέφωνο #}
    <div>
      <label for="epikoinonia-syllogos" class="block text-sm font-medium text-slate-700 mb-1.5">
        Email ή Τηλέφωνο
      </label>
      <input
        type="text"
        id="epikoinonia-syllogos"
        name="epikoinonia"
        required
        placeholder="Για να επικοινωνήσουμε μαζί σας"
        class="w-full px-4 py-3 rounded-lg border border-slate-300 text-slate-900 text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
    </div>

    {# Checkbox online εγγραφή μελών #}
    <div class="flex items-start gap-3">
      <input
        type="checkbox"
        id="online-eggrafi"
        name="online_eggrafi"
        value="Ναι"
        class="mt-1 w-4 h-4 text-brand border-slate-300 rounded focus:ring-brand focus:ring-2"
      >
      <label for="online-eggrafi" class="text-sm text-slate-600">
        Θέλω online εγγραφή μελών
      </label>
    </div>

    {# Submit Button #}
    <button
      type="submit"
      class="w-full px-6 py-3.5 text-base font-semibold rounded-xl bg-slate-900 text-white hover:bg-slate-800 transition-colors shadow-lg"
    >
      Λάβετε πρόταση
    </button>

    <p class="text-xs text-slate-500 text-center mt-4">
      Απαντάμε εντός 24 ωρών. Χωρίς spam.
    </p>
  </form>
</div>
