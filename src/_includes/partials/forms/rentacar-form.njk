{# Contextual contact form for Rent a Car niche #}
<div class="max-w-lg mx-auto mt-10 bg-white rounded-2xl shadow-xl p-8" id="protasi-form">
  <h3 class="text-xl font-bold text-slate-900 text-center mb-6">
    Ζητήστε πρόταση για ιστοσελίδα Rent a Car
  </h3>
  <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-5">
    <input type="hidden" name="_subject" value="Νέο αίτημα - Rent a Car Ιστοσελίδα">
    <input type="hidden" name="_next" value="https://tapa.gr/euxaristoume-rentacar/">

    {# Περιοχή δραστηριοποίησης #}
    <div>
      <label for="periochi-rentacar" class="block text-sm font-medium text-slate-700 mb-1.5">
        Περιοχή δραστηριοποίησης
      </label>
      <input
        type="text"
        id="periochi-rentacar"
        name="periochi"
        required
        placeholder="π.χ. Κρήτη, Αθήνα, Κυκλάδες"
        class="w-full px-4 py-3 rounded-lg border border-slate-300 text-slate-900 text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
    </div>

    {# Μέγεθος στόλου #}
    <div>
      <label for="stolos" class="block text-sm font-medium text-slate-700 mb-1.5">
        Μέγεθος στόλου
      </label>
      <select
        id="stolos"
        name="stolos"
        required
        class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
        <option value="" disabled selected>Επιλέξτε μέγεθος στόλου</option>
        <option value="Έως 10 οχήματα">Έως 10 οχήματα</option>
        <option value="10-30 οχήματα">10–30 οχήματα</option>
        <option value="30+ οχήματα">30+ οχήματα</option>
      </select>
    </div>

    {# Email ή Τηλέφωνο #}
    <div>
      <label for="epikoinonia-rentacar" class="block text-sm font-medium text-slate-700 mb-1.5">
        Email ή Τηλέφωνο
      </label>
      <input
        type="text"
        id="epikoinonia-rentacar"
        name="epikoinonia"
        required
        placeholder="Για να επικοινωνήσουμε μαζί σας"
        class="w-full px-4 py-3 rounded-lg border border-slate-300 text-slate-900 text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand focus:border-brand transition-colors"
      >
    </div>

    {# Checkbox πολύγλωσσο #}
    <div class="flex items-start gap-3">
      <input
        type="checkbox"
        id="polyglossa"
        name="polyglossa"
        value="Ναι"
        class="mt-1 w-4 h-4 text-brand border-slate-300 rounded focus:ring-brand focus:ring-2"
      >
      <label for="polyglossa" class="text-sm text-slate-600">
        Ενδιαφέρομαι για πολυγλωσσική ιστοσελίδα (τουριστικό κοινό)
      </label>
    </div>

    {# Submit Button #}
    <button
      type="submit"
      class="w-full px-6 py-3.5 text-base font-semibold rounded-xl bg-slate-900 text-white hover:bg-slate-800 transition-colors shadow-lg"
    >
      Λάβετε πρόταση
    </button>

    <p class="text-xs text-slate-500 text-center mt-4">
      Απαντάμε εντός 24 ωρών. Χωρίς spam.
    </p>
  </form>
</div>
