---
layout: base.njk
---

{# Set canonical URL #}
{% set canonicalUrl = site.url ~ page.url %}

{# Determine related niches - use related_slugs if present, else next 2 in array order #}
{% set relatedNiches = [] %}
{% if niche and niche.related_slugs %}
  {% for slug in niche.related_slugs %}
    {% for n in niches %}
      {% if n.slug == slug %}
        {% set relatedNiches = (relatedNiches.push(n), relatedNiches) %}
      {% endif %}
    {% endfor %}
  {% endfor %}
{% elif niche %}
  {# Fallback: next 2 niches in array order with wrap-around #}
  {% set currentIndex = 0 %}
  {% for n in niches %}
    {% if n.slug == niche.slug %}
      {% set currentIndex = loop.index0 %}
    {% endif %}
  {% endfor %}
  {% set nextIndex1 = (currentIndex + 1) % niches.length %}
  {% set nextIndex2 = (currentIndex + 2) % niches.length %}
  {% set relatedNiches = [niches[nextIndex1], niches[nextIndex2]] %}
{% endif %}

<section class="section bg-slate-50 border-b border-slate-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      {# Breadcrumb - visual only #}
      <nav aria-label="Breadcrumb" class="mb-6">
        <ol class="flex items-center justify-center gap-2 text-sm text-slate-500">
          <li>
            <a href="/" class="hover:text-brand-700 transition-colors">Αρχική</a>
          </li>
          <li aria-hidden="true">/</li>
          <li>
            <a href="/istoselides/" class="hover:text-brand-700 transition-colors">Ιστοσελίδες</a>
          </li>
          <li aria-hidden="true">/</li>
          <li>
            <span class="text-slate-900 font-medium">{{ niche.name if niche else nicheTitle }}</span>
          </li>
        </ol>
      </nav>

      <span class="text-brand-700 font-semibold text-sm uppercase tracking-wide">{{ nicheLabel | default("Εξειδικευμένη Λύση") }}</span>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-slate-900 mt-4">
        {{ niche.h1_title if niche else ("Κατασκευή Ιστοσελίδων για " ~ nicheTitle) }}
      </h1>
      <p class="section-subtitle mx-auto text-center">
        {{ niche.hero_subtitle if niche else nicheDescription }}
      </p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="section-title">Χαρακτηριστικά για {{ niche.name if niche else nicheTitle }}</h2>
        <p class="text-slate-600 mt-4 text-lg">
          {{ niche.features_intro if niche and niche.features_intro else (nicheIntro | default("Εξειδικευμένες λύσεις για τον κλάδο σας.")) }}
        </p>
        <ul class="mt-8 space-y-4">
          {% set featuresList = niche.features if niche else nicheFeatures %}
          {% for feature in featuresList %}
          <li class="flex items-start gap-4">
            <svg class="w-6 h-6 text-brand-700 shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <div>
              {% if feature.title %}
                <strong class="text-slate-900">{{ feature.title }}</strong>
                <p class="text-slate-600 text-sm mt-1">{{ feature.description }}</p>
              {% else %}
                <span class="text-slate-900">{{ feature }}</span>
              {% endif %}
            </div>
          </li>
          {% endfor %}
        </ul>
        {% if niche and (niche.slug == "iatroi" or niche.slug == "rent-a-car" or niche.slug == "xenodocheia" or niche.slug == "fotografoi" or niche.slug == "gymnastiria" or niche.slug == "dikigoroi" or niche.slug == "estiatoria" or niche.slug == "syllogoi") %}
        <a href="#protasi-form" class="btn btn-primary mt-8">
          Ζητήστε Πρόταση →
        </a>
        {% else %}
        <a href="/epikoinonia/" class="btn btn-primary mt-8">
          Ζητήστε Προσφορά →
        </a>
        {% endif %}
      </div>
      <div class="card p-8 lg:p-12">
        <p class="text-xl font-bold text-slate-900 mb-6">Τι Περιλαμβάνει;</p>
        <ul class="space-y-4">
          {% set includesList = niche.includes if niche else nicheIncludes %}
          {% for item in includesList %}
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-brand-700 shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-slate-600">{{ item }}</span>
          </li>
          {% endfor %}
        </ul>
        <div class="border-t border-slate-200 my-6"></div>
        <div class="text-center">
          <div class="text-4xl font-bold text-brand-700">100/100</div>
          <div class="text-slate-500 mt-1 text-sm">PageSpeed Score</div>
        </div>
      </div>
    </div>
  </div>
</section>

{# Proof Points Section #}
{% set proofList = niche.proof_points if niche else [] %}
{% if proofList and proofList.length > 0 %}
<section class="section bg-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <h2 class="section-title text-center mb-12">Τι βελτιώνουμε στον κλάδο σας</h2>
      <ul class="space-y-4">
        {% for point in proofList %}
        <li class="flex items-start gap-4">
          <svg class="w-6 h-6 text-brand-700 shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-slate-700">{{ point | safe }}</span>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
{% endif %}

{# Case Study Teaser - only renders if niche.case_study exists #}
{% if niche and niche.case_study %}
<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        {# Image side #}
        <div class="relative">
          <div class="aspect-video rounded-lg overflow-hidden shadow-lg bg-slate-100">
            <img
              src="{{ niche.case_study.image }}"
              alt="{{ niche.case_study.client_name }} - Case Study"
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>
          {# Floating badge #}
          <span class="absolute top-4 left-4 px-3 py-1 text-xs font-semibold uppercase tracking-wide bg-brand-700 text-white rounded-full shadow-md">
            Case Study
          </span>
        </div>
        {# Content side #}
        <div>
          <p class="text-sm text-slate-500 mb-2">{{ niche.case_study.client_name }}</p>
          <p class="text-2xl font-bold text-slate-900 mb-6">{{ niche.case_study.teaser_title }}</p>
          {# Metrics pills #}
          <div class="flex flex-wrap gap-3 mb-8">
            {% for metric in niche.case_study.metrics %}
            <span class="px-4 py-2 text-sm font-medium text-slate-700 border-2 border-brand-600 rounded-full bg-brand/5">
              {{ metric }}
            </span>
            {% endfor %}
          </div>
          <a
            href="/portfolio/{{ niche.case_study.slug }}/"
            class="inline-flex items-center gap-2 px-6 py-3 text-base font-semibold rounded-xl bg-slate-900 text-white hover:bg-slate-800 transition-colors shadow-lg"
          >
            Διαβάστε την πλήρη ανάλυση
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{# Additional Content from page #}
{% if content | trim %}
<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto prose prose-slate prose-headings:font-bold prose-a:text-brand-700">
      {{ content | safe }}
    </div>
  </div>
</section>
{% endif %}

{# FAQ Section #}
{% set faqsList = niche.faqs if niche else [] %}
{% if faqsList and faqsList.length > 0 %}
<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <h2 class="section-title text-center mb-12">Συχνές Ερωτήσεις</h2>
      <dl class="space-y-6">
        {% for faq in faqsList %}
        <div class="card p-6">
          <dt class="text-lg font-semibold text-slate-900">{{ faq.q }}</dt>
          <dd class="mt-2 text-slate-600">{{ faq.a }}</dd>
        </div>
        {% endfor %}
      </dl>
    </div>
  </div>
</section>
{% endif %}

<section class="section section-alt">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="section-title">Γιατί να Επιλέξετε Εμάς;</h2>
      <p class="text-slate-600 mt-4">Η εξειδίκευσή μας στον κλάδο σας κάνει τη διαφορά.</p>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="card p-6 text-center">
        <div class="w-12 h-12 bg-brand/10 rounded-xl flex items-center justify-center mx-auto">
          <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <p class="font-bold text-slate-900 mt-4">Ταχύτητα</p>
        <p class="text-slate-600 text-sm mt-2">Load time &lt;1 δευτερόλεπτο, 100/100 PageSpeed.</p>
      </div>
      <div class="card p-6 text-center">
        <div class="w-12 h-12 bg-brand/10 rounded-xl flex items-center justify-center mx-auto">
          <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        <p class="font-bold text-slate-900 mt-4">SEO</p>
        <p class="text-slate-600 text-sm mt-2">Τοπικό SEO και στοχευμένες λέξεις-κλειδιά.</p>
      </div>
      <div class="card p-6 text-center">
        <div class="w-12 h-12 bg-brand/10 rounded-xl flex items-center justify-center mx-auto">
          <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <p class="font-bold text-slate-900 mt-4">Ασφάλεια</p>
        <p class="text-slate-600 text-sm mt-2">SSL, security headers, GDPR compliance.</p>
      </div>
    </div>
  </div>
</section>

{# Related Niches Section #}
{% if relatedNiches and relatedNiches.length > 0 %}
<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="section-title">Σχετικοί Κλάδοι</h2>
      <p class="text-slate-600 mt-4">Δείτε επίσης τις εξειδικευμένες λύσεις μας για:</p>
    </div>
    <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
      {% for related in relatedNiches %}
      <a href="/istoselides/{{ related.slug }}/" class="card p-6 hover:shadow-lg transition-shadow group" aria-label="Ιστοσελίδες για {{ related.anchor_name }}">
        <p class="font-bold text-slate-900 group-hover:text-brand-700 transition-colors">Ιστοσελίδες για {{ related.anchor_name }}</p>
        <p class="text-slate-600 text-sm mt-2">{{ related.hero_subtitle }}</p>
        <span class="text-brand-700 text-sm mt-4 inline-block">Μάθετε περισσότερα →</span>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<section class="section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <p class="text-slate-500 mb-4">
      <a href="/istoselides/" class="hover:text-brand-700 transition-colors">← Δείτε όλους τους κλάδους</a>
    </p>
  </div>
</section>

<section class="section bg-brand" id="cta-section">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl font-bold text-slate-900">Έτοιμοι για το Νέο σας Site;</h2>
    <p class="text-xl text-slate-800 mt-4 max-w-xl mx-auto">
      Στείλτε μας το project σας και λαμβάνετε δωρεάν πρόταση εντός 24 ωρών.
    </p>
    {% if niche and niche.slug == "iatroi" %}
      {% include "partials/forms/iatroi-form.njk" %}
    {% elif niche and niche.slug == "rent-a-car" %}
      {% include "partials/forms/rentacar-form.njk" %}
    {% elif niche and niche.slug == "xenodocheia" %}
      {% include "partials/forms/hospitality-form.njk" %}
    {% elif niche and niche.slug == "fotografoi" %}
      {# Proofing Advantage Microcopy #}
      <ul class="text-left max-w-md mx-auto mt-6 mb-2 space-y-2 text-slate-800">
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-slate-900 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Ο πελάτης επιλέγει φωτογραφίες online (proofing).</span>
        </li>
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-slate-900 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Παράδοση υλικού με δικό σας branding — χωρίς τρίτες πλατφόρμες.</span>
        </li>
      </ul>
      {% include "partials/forms/fotografoi-form.njk" %}
    {% elif niche and niche.slug == "gymnastiria" %}
      {% include "partials/forms/gymnastiria-form.njk" %}
    {% elif niche and niche.slug == "dikigoroi" %}
      {% include "partials/forms/dikigoroi-form.njk" %}
    {% elif niche and niche.slug == "estiatoria" %}
      {% include "partials/forms/estiatoria-form.njk" %}
    {% elif niche and niche.slug == "syllogoi" %}
      {% include "partials/forms/syllogoi-form.njk" %}
    {% else %}
    <a href="/epikoinonia/" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl bg-slate-900 text-white hover:bg-slate-800 transition-colors mt-8 shadow-lg">
      Δωρεάν Πρόταση →
    </a>
    {% endif %}
  </div>
</section>

{# Sticky CTA for niches with forms #}
{% if niche and (niche.slug == "iatroi" or niche.slug == "rent-a-car" or niche.slug == "xenodocheia" or niche.slug == "fotografoi" or niche.slug == "gymnastiria" or niche.slug == "dikigoroi" or niche.slug == "estiatoria" or niche.slug == "syllogoi") %}
<div class="fixed bottom-6 right-6 z-40 hidden sm:block">
  <a
    href="#protasi-form"
    class="inline-flex items-center gap-2 px-5 py-3 text-sm font-semibold rounded-full bg-slate-900 text-white hover:bg-slate-800 transition-all shadow-xl hover:shadow-2xl"
    aria-label="Μετάβαση στη φόρμα πρότασης"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
    Ζητήστε Πρόταση
  </a>
</div>
<div class="fixed bottom-0 left-0 right-0 z-40 sm:hidden bg-white border-t border-slate-200 p-3">
  <a
    href="#protasi-form"
    class="block w-full text-center px-6 py-3 text-base font-semibold rounded-xl bg-slate-900 text-white hover:bg-slate-800 transition-colors"
    aria-label="Μετάβαση στη φόρμα πρότασης"
  >
    Ζητήστε Πρόταση
  </a>
</div>
{% endif %}

{% block head %}
{# WebPage Schema #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "@id": "{{ canonicalUrl }}#webpage",
  "url": "{{ canonicalUrl }}",
  "name": "{{ title }}",
  "description": "{{ description }}",
  "isPartOf": {
    "@id": "{{ site.url }}/#website"
  },
  "about": {
    "@id": "{{ canonicalUrl }}#service"
  },
  "breadcrumb": {
    "@id": "{{ canonicalUrl }}#breadcrumb"
  }
}
</script>

{# BreadcrumbList Schema - use anchor_name for SEO signal #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "@id": "{{ canonicalUrl }}#breadcrumb",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Αρχική",
      "item": "{{ site.url }}/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Ιστοσελίδες",
      "item": "{{ site.url }}/istoselides/"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Ιστοσελίδες για {{ niche.anchor_name if niche else nicheTitle }}",
      "item": "{{ canonicalUrl }}"
    }
  ]
}
</script>

{# Service Schema #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": "{{ canonicalUrl }}#service",
  "name": "{{ niche.h1_title if niche else title }}",
  "description": "{{ niche.meta_desc if niche else description }}",
  "provider": {
    "@type": "Organization",
    "@id": "{{ site.url }}/#organization"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ελλάδα"
  },
  "serviceType": "Web Development"
}
</script>

{# FAQPage Schema #}
{% set faqsList = niche.faqs if niche else [] %}
{% if faqsList and faqsList.length > 0 %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "@id": "{{ canonicalUrl }}#faq",
  "mainEntity": [
    {% for faq in faqsList %}
    {
      "@type": "Question",
      "name": "{{ faq.q }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ faq.a }}"
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
{% endif %}
{% endblock %}
